//1. XUXA 
#include <stdio.h>

void imprimirMusica (int numPatinhos) {
    if (numPatinhos < 2){
        printf("O numero de patinhos deve ser maior ou igual a dois. \n");
        return;
    }
    
    for (int i = numPatinhos; i >= 2 ; i--){
        printf("%d Patinhos foram passear \n", i);
        printf("Além das motanhas \n");
        printf("Para brincar \n");
        printf("A mamae gritou Kua kua kua \n");
        if (i == 2){
        printf("Mas só 1 patinho voltou de la \n");
        }else {
            printf("Mas só %d patinhos voltaram de la \n", i - 1);
        }
        
    }
     printf("1 patinho foi passear \n");
     printf("Além das montanhas para brincar \n");
     printf("A mamãe gritou \n Quack quack quack \n Mas nenhum patinho \n Voltou de lá \n");
     printf("A mamãe patinha \n Foi procurar \n Além das montanhas \n Na beira do mar \n A mamãe gritou \n Quack quack quack \n E os 5 patinhos \n Voltaram de lá");
}
int main(){
    int quantPatinhos;
    printf("Digite a quantidade de patinhos (maior ou igual a dois):");
    scanf("%d", &quantPatinhos);
    imprimirMusica(quantPatinhos);
    return 0;
}
